#! /usr/bin/env bash
# mdbgt_status
# last change: 20240821_mdb


COLOR_SET="\e[1;92m"
COLOR_RESET="\e[0m"
CURRDIR=$PWD
TRPRT=${TMP}/testing_report
> ${TRPRT}


function get_status() {
	cmd=$1
	OUTPUT=$(${cmd} status)

	echo $OUTPUT | grep -i "git push\|untracked\|modified\|deleted" > /dev/null

	if [[ $? -ne 0 ]]; then
		echo -n "[INFO] checking git status in ${DDD} ..."
		echo " no action required"
	else
		echo "---"
		printf "${COLOR_SET}"
		printf "[INFO] checking git status in ${DDD} ... NEED TO ADD and/or COMMIT\n" | tee -a ${TRPRT}
		printf "${COLOR_RESET}"
		${cmd} status
		echo "---"
	fi
}

cd ~/majstaf/mdbgit/
for DDD in $(find * -maxdepth 0 -type d | grep -v 'vlpprs_mdb'); do
	cd $DDD &> /dev/null

	get_status "/usr/bin/git"
	cd ..
done

# volpejpers
DDD="vlpprs_mdb"
MDBVOLGITDIR="${HOME}/majstaf/mdbgit/vlpprs_mdb"
MDBVOLWORKTREE="${HOME}/majstaf/majvolpejpers"
get_status="/usr/bin/git --git-dir=${MDBVOLGITDIR} --work-tree=${MDBVOLWORKTREE}"

echo ""
printf "${COLOR_SET}"
echo "*** REPORT ***"
printf "${COLOR_RESET}"
if [ -s ${TRPRT} ]; then
	cat ${TRPRT}
else
	echo "[INFO] No action required"
fi

rm ${TRPRT} 2>/dev/null
cd ${CURRDIR}

