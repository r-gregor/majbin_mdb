#! /usr/bin/env bash
# mvol_testpush_all
# last update: 20240821_mdb

USR="mdb"

export MDBVOLGITDIR="${HOME}/majstaf/mdbgit/vlpprs_${USR}"
export MDBVOLWORKDIR="${HOME}/majstaf/majvolpejpers"

mdbg_vol="/usr/bin/git --git-dir=${MDBVOLGITDIR} --work-tree=${MDBVOLWORKDIR}"

echo "[INFO] Testpush to d_GITHUB ..."
${mdbg_vol} push --dry-run git@github.com:r-gregor/vlpprs_${USR}.git main
echo "---"

echo "[INFO] Testpush to d_GITLAB ..."
${mdbg_vol} push --dry-run git@gitlab.com:r-gregor/vlpprs_${USR}.git main
echo "---"

